# Server Configuration
NODE_ENV=development
PORT=3000

# Database (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here
DATABASE_URL=postgresql://postgres:password@localhost:5432/smartline

# Authentication
JWT_SECRET=your-very-secure-jwt-secret-min-32-chars
JWT_EXPIRES_IN=7d

# Payment Gateway (Kashier)
KASHIER_MERCHANT_ID=MID-XXXXX-XXX
KASHIER_API_KEY=your-kashier-api-key
KASHIER_WEBHOOK_SECRET=your-kashier-webhook-secret
KASHIER_MODE=test
KASHIER_CURRENCY=EGP

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:8081

# External APIs
MAPBOX_API_KEY=your-mapbox-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Monitoring (Optional)
SENTRY_DSN=https://your-sentry-dsn

# BEON OTP
BEON_OTP_ENABLED=true
BEON_OTP_BASE_URL=https://v3.api.beon.chat/api/v3
BEON_OTP_TOKEN=your-beon-otp-token
BEON_OTP_LANG=ar
BEON_OTP_LENGTH=4

# Logging
LOG_LEVEL=info
LOG_FORMAT=pretty
LOG_REDACT=true
SLOW_REQUEST_MS=800
SERVICE_NAME=smartline-backend
HONEYCOMB_ENABLED=true
